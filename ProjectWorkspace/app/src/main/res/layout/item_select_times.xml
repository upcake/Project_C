<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFEBEE">

    <RadioGroup
        android:id="@+id/times_Parent"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ToggleButton
            android:id="@+id/times_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/times_button1_state"
            android:checked="true"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:onClick="onToggle"
            android:textColor="@drawable/day_button_text"
            android:textOff="1번"
            android:textOn="1번"
            android:textSize="18sp" />

        <ToggleButton
            android:id="@+id/times_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/times_button2_state"
            android:onClick="onToggle"
            android:textColor="@drawable/day_button_text"
            android:textOff="2번"
            android:textOn="2번"
            android:textSize="18sp" />

        <ToggleButton
            android:id="@+id/times_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/times_button3_state"
            android:onClick="onToggle"
            android:textColor="@drawable/day_button_text"
            android:textOff="3번"
            android:textOn="3번"
            android:textSize="18sp" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>