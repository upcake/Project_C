<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/loginFDPW_imageView"
        android:layout_width="264dp"
        android:layout_height="188dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.145"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/loginFDPW_sendEmail"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginFDPW_userEmail"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:text="임시 비밀번호 이메일 발송하기" />

    <EditText
        android:id="@+id/loginFDPW_userEmail"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginFDPW_textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/loginFDPW_tvMail"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginFDPW_textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_toStartOf="@+id/loginFDPW_userEmail"
        android:layout_toLeftOf="@+id/loginFDPW_userEmail"
        android:text="메일주소 : "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/loginFDPW_textView"
        android:layout_width="323dp"
        android:layout_height="44dp"
        android:layout_below="@+id/loginFDPW_imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="회원 가입된 이메일 주소를 입력해주세요!"
        android:textSize="16sp" />

</RelativeLayout>