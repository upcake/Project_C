<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFECB3">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/myPageF_Profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/default_profile"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp" />

    <TextView
        android:id="@+id/myPageF_Nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textColor="#4A4A4C"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/myPageF_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="aaaaa@naver.com"
        android:textSize="16sp"
        android:textColor="#75797C"
        android:layout_marginLeft="40dp"/>/>

    <Button
        android:id="@+id/myPageF_MyInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원 정보 변경"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"/>

    <Button
        android:id="@+id/myPageF_DeviceSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기기 설정"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"/>

    <Button
        android:id="@+id/myPageF_Calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="복용 캘린더"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"/>

    <Button
        android:id="@+id/myPageF_Emergency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비상 연락망"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"/>

    <Button
        android:id="@+id/myPageF_Logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"/>
</LinearLayout>